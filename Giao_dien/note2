function loadClient(chat) {
    connection.invoke("tinNhanDaXoa", id, kh, loai)
        .then(function (ketqua) {
            if (loai == true) {
                chat.server.getMessagesAdmin(id, kh).done(function (result) {
                });
            } else {
                chat.server.getMessages(id).done(function (result) {
                });
            }
        })
        .catch(function (err) {
            alert("Đã có lỗi!");
        });
}