@model Jade_Dragon.Models.HtLichSu
@{
    ViewBag.Title = "DanhSachDon";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

@*<script src="~/Areas/Admin/Public/js/dataTables_min.js"></script>
    <link href="~/Areas/Admin/Public/css/Table.css" rel="stylesheet" />*@
<link href="~/Areas/Admin/Public/css/aaaaaa.css" rel="stylesheet" />
<div class="home">
    <div class="body">

        <table id="example" class="display">
            <thead>
                <tr>
                    <th>Mã hóa đơn</th>
                    <th>Tên khách sạn</th>
                    <th>Tên khách hàng</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.hd)
                {
                    <tr class="invoice-row" data-invoice-id="@item.MaHoaDon">
                        <td class="mhd">@item.MaHoaDon</td>
                        @if (item.MaKhachSan != null)
                        {
                            <td>
                                <a href="@Url.Action("Details", "QLKhachSan", new {id = item.MaKhachSan})" style="text-decoration: none; color: white;">
                                    @item.TenKhachSan
                                </a>
                            </td>
                        }
                        else
                        {
                            <td>@item.TenKhachSan</td>
                        }
                        @if (item.MaKh != null)
                        {
                            <td>
                                <a href="@Url.Action("Details", "QLKhachHang", new {id = item.MaKh})" style="text-decoration: none; color: white;">
                                    @item.HoTen
                                </a>
                            </td>
                        }
                        else
                        {
                            <td>@item.HoTen</td>
                        }
                        <td>@item.NgayDat</td>
                        <td>@item.TongTien</td>
                        <td style="display: flex;">
                            <a href="" style="text-decoration: none; color: wheat; font-weight: 700;">
                                Xác nhận
                            </a>
                            <a href="" style="margin-left: 10px;">
                                <img src="~/Style/img/icon/X.jpg" title="Xóa hóa đơn này" />
                            </a>
                        </td>
                    </tr>
                    <tr class="details-row" data-invoice-id="@item.MaHoaDon">
                        <td colspan="6">
                            <div class="popup-content">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Mã chi tiết hóa đơn</th>
                                            <th>Ngày đến</th>
                                            <th>Ngày đi</th>
                                            <th>Đơn giá</th>
                                            <th>Tên Phòng</th>
                                            <th>Trạng thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var c in Model.cthd.Where(a => a.MaHoaDon == item.MaHoaDon))
                                        {
                                            <tr>
                                                <td>@c.MaChiTietHoaDon</td>
                                                <td>@c.NgayDen</td>
                                                <td>@c.NgayDi</td>
                                                <td>@c.Gia</td>
                                                <td>@c.TenPhong</td>
                                                @if (c.DaDen == false)
                                                {
                                                    <td>Khách chưa đến</td>
                                                }
                                                else
                                                {
                                                    <td>Khách đã đến</td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <button class="close-btn">Đóng</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Mã hóa đơn</th>
                    <th>Tên khách sạn</th>
                    <th>Tên khách hàng</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>

        <div id="popup"></div>



    </div>
</div>
@*<script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>*@

<script>
    const invoiceRows = document.querySelectorAll('.invoice-row');
    const detailsRows = document.querySelectorAll('.details-row');
    const closeButtons = document.querySelectorAll('.close-btn');
    const popup = document.getElementById('popup');

    // Ẩn tất cả các hàng chi tiết hóa đơn
    detailsRows.forEach(row => {
        row.style.display = 'none';
    });

    // Bắt sự kiện click vào mã hóa đơn
    invoiceRows.forEach(row => {
        row.addEventListener('click', () => {
            const invoiceId = row.getAttribute('data-invoice-id');
            const detailsRow = document.querySelector(`.details-row[data-invoice-id="${invoiceId}"]`);

            // Hiển thị/hide chi tiết hóa đơn tương ứng
            if (detailsRow.style.display === 'none') {
                detailsRow.style.display = 'table-row';
                popup.style.display = 'block';
            } else {
                detailsRow.style.display = 'none';
                popup.style.display = 'none';
            }
        });
    });

    // Bắt sự kiện click vào nút tắt
    closeButtons.forEach(button => {
        button.addEventListener('click', () => {
            const detailsRow = button.closest('.details-row');
            const invoiceId = detailsRow.getAttribute('data-invoice-id');
            const invoiceRow = document.querySelector(`.invoice-row[data-invoice-id="${invoiceId}"]`);

            // Ẩn chi tiết hóa đơn và đóng popup
            detailsRow.style.display = 'none';
            popup.style.display = 'none';

            // Scroll đến hàng hóa đơn tương ứng
            invoiceRow.scrollIntoView();
        });
    });
</script>
