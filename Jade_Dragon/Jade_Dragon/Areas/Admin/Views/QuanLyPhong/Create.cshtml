@model Jade_Dragon.Models.phong

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<style>
    .home .body .Content form .one {
        padding: 40px;
    }
</style>
<div class="home">
    <div class="body">
        <div class="Content">
            @using (Html.BeginForm(new {MaKS = ViewBag.MaKS}))
            {
                @Html.AntiForgeryToken()
            
        <div class="Info">
            <div class="one">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div style="display:flex">
                <div class="one">
                    <div class="label">
                        <label for="">Tên phòng: </label>
                    </div>
                    @Html.EditorFor(model => model.TenPhong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenPhong, "", new { @class = "text-danger" })
                </div>
                <div class="one">
                    <div class="label">
                        <label for="">Loại hình: </label>
                    </div>
                    @Html.EditorFor(model => model.LoaiHinh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LoaiHinh, "", new { @class = "text-danger" })
                </div>
            </div>
            <div style="display:flex;">
                <div class="one">
                    <div class="label">
                        <label for="">Giá: </label>
                    </div>
                    @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control", type = "text", oninput = "formatCurrency(this)" } })
                    @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                </div>
                <div class="one">
                    <div class="label">
                        <label for="">VIP: </label>
                    </div>
                    @Html.EditorFor(model => model.VIP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.VIP, "", new { @class = "text-danger" })
                </div>
                <div class="one">
                    <div class="label">
                        <label for="">Khóa Phòng: </label>
                    </div>
                    @Html.EditorFor(model => model.KhoaPhong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.KhoaPhong, "", new { @class = "text-danger" })
                </div>
                @Html.HiddenFor(model => model.MaKhachSan)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="one">
                <input type="submit" class="save two" value="Save">
            </div>
        </div>
            }
            <div>
                <a href="~/Admin/QuanLyPhong/Phong?MaKS=@ViewBag.MaKS" class="out two" style=" margin-top: -75px; margin-left: 230px;">
                    Quay về khách sạn
                </a>

            </div>
        </div>
    </div>
</div>
<script src="~/Areas/Admin/Public/js/ChucNang.js"></script>
<script src="~/Areas/Admin/Public/js/GiaTien.js"></script>
